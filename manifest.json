{
  "manifest_version" : 2,
  "version" : "0.11",
  "name" : "Worthy for Firefox",
  "description" : "Detect and controll VG-Wort-Markers embeded in webpages",

  "icons" : {
    "16" : "assets/icon-16-enabled.png",
    "64" : "assets/icon-64-enabled.png"
  },
  
  "permissions" : [
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "browser_action" : {
    "default_title" : "Worthy for Firefox",
    "default_icon" : {
      "16" : "assets/icon-16-enabled.png",
      "64" : "assets/icon-64-enabled.png"
    }
  },
  
  "background" : {
    "scripts" : [ "worthy-main.js" ]
  }
}